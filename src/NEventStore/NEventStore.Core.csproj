<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard1.6</TargetFramework>
    <PackageId>NEventStore.Core</PackageId>
    <PackageVersion>1.0.0</PackageVersion>
    <Description> Port of the NEventStore core on NetCore</Description>
    <Authors>NEventStore</Authors>
    <Company>NEventStore</Company>
    <Product>NEventStore</Product>
    <RootNamespace>NEventStore</RootNamespace>
    <Version>1.0.0</Version>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>TRACE;DEBUG;NETSTANDARD1_6</DefineConstants>
  </PropertyGroup>
  <ItemGroup>
    <Compile Remove="Client\Messages.Designer.cs" />
    <Compile Remove="Messages.Designer.cs" />
    <Compile Remove="Resources.Designer.cs" />
    <Compile Remove="Serialization\Messages.Designer.cs" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Remove="Client\Messages.resx" />
    <EmbeddedResource Remove="Messages.resx" />
    <EmbeddedResource Remove="Resources.resx" />
    <EmbeddedResource Remove="Serialization\Messages.resx" />
  </ItemGroup>
  <ItemGroup>
    <Compile Include="..\AssemblyInfo.cs" Link="Properties\AssemblyInfo.cs" />
    <Compile Include="..\GlobalAssemblyInfo.cs" Link="Properties\GlobalAssemblyInfo.cs" />
    <Compile Include="..\GlobalSuppressions.cs" Link="Properties\GlobalSuppressions.cs" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="..\CustomDictionary.xml" Link="Properties\CustomDictionary.xml" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="System.Runtime.Serialization.Formatters">
      <Version>4.3.0</Version>
    </PackageReference>
    <PackageReference Include="System.Threading.Thread">
      <Version>4.3.0</Version>
    </PackageReference>
    <PackageReference Update="NETStandard.Library" Version="1.6.1" />
  </ItemGroup>
  <ItemGroup>
    <Compile Update="Resources\Core\Messages.Designer.cs">
      <DependentUpon>Messages.resx</DependentUpon>
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
    </Compile>
    <Compile Update="Resources\Core\Resources.Designer.cs">
      <DependentUpon>Resources.resx</DependentUpon>
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
    </Compile>
    <Compile Update="Serialization\Resources\Core\Messages.Designer.cs">
      <DependentUpon>Messages.resx</DependentUpon>
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
    </Compile>
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Update="Resources\Core\Messages.resx">
      <CustomToolNamespace>NEventStore</CustomToolNamespace>
      <LastGenOutput>Messages.Designer.cs</LastGenOutput>
      <Generator>ResXFileCodeGenerator</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="Resources\Core\Resources.resx">
      <CustomToolNamespace>NEventStore</CustomToolNamespace>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
      <Generator>ResXFileCodeGenerator</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="Serialization\Resources\Core\Messages.resx">
      <CustomToolNamespace>NEventStore.Serialization</CustomToolNamespace>
      <LastGenOutput>Messages.Designer.cs</LastGenOutput>
      <Generator>ResXFileCodeGenerator</Generator>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <None Update="NanoContainer.d.ts">
      <DependentUpon>NanoContainer.cs</DependentUpon>
    </None>
  </ItemGroup>
</Project>